export ZSH="$HOME/.ohmyzsh"
export DOTFILES="$HOME/.dotfiles"
export PROJECTS="$HOME/projects"
export DRIVE="$HOME/Library/Mobile Documents"
export VAULT="$DRIVE/iCloud~md~obsidian/Documents/ðŸ§  Digital Brain"

export LSCOLORS='exfxcxdxbxegedabagacad'
export CLICOLOR=true

DEFAULT_USER="$(whoami)"

declare -a plugins=(zsh-autosuggestions zsh-syntax-highlighting git brew docker docker-compose)

## NVM path (should be before sourcing zsh)
export NVM_LAZY_LOAD=true
export NVM_AUTO_USE=true

source ~/.aliases
source ~/.func
if [[ -e ~/.localrc ]]; then
	source ~/.localrc
fi

## Add Homebrew Path
if [[ $(uname -m) == 'arm64' ]]; then
	export PATH=/opt/homebrew/bin:$PATH
else
	export PATH=/usr/local/opt:$PATH
fi

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                   # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" # This loads nvm bash_completion

nvm use 16 &>/dev/null

## Add global yarn path
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

## Add java path
export PATH="/usr/local/opt/openjdk/bin:$PATH"

eval "$(oh-my-posh prompt init zsh --config ~/.prompt.json)"
source $(brew --prefix)/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

if [[ -e ~/.zshrc.local ]]; then
	source ~/.zshrc.local
fi 
